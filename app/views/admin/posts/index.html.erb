<%- model_class = Post -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_post_path,
            :class => 'btn btn-primary' %>
            <br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:published_at) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, edit_admin_post_path(post) %></td>
        <td><%= post.published_at %></td>
        <td><%= post.status %></td>
        <td>
          
          <%= link_to t('.preview', :default => t("helpers.links.preview")),
                      admin_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_post_path(post), :class => 'btn btn-mini' %>
          <% if post.published? -%>
            <%= link_to t('.withdraw', :default => t("helpers.links.withdraw")),
                        withdraw_admin_post_path(post),
                        :method => :patch,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-warning' %>
          <% else -%>
            <%= link_to t('.publish', :default => t("helpers.links.publish")),
                        publish_admin_post_path(post),
                        :method => :patch,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-warning' %>
          <% end -%>            
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_post_path,
            :class => 'btn btn-primary' %>
