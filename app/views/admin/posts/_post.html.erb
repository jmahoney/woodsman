<tr>
  <td><%= link_to post.title, edit_admin_post_path(post) %></td>
  <td><%= post.published_at %></td>
  <td><%= post.status %></td>
  <td>
  
    <%= link_to t('.preview', :default => t("helpers.links.preview")),
                admin_post_path(post), :class => 'btn btn-mini' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_post_path(post), :class => 'btn btn-mini' %>
    <% if post.published? -%>
      <%= link_to t('.withdraw', :default => t("helpers.links.withdraw")),
                  withdraw_admin_post_path(post),
                  :method => :patch,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-mini btn-warning' %>
    <% else -%>
      <%= link_to t('.publish', :default => t("helpers.links.publish")),
                  publish_admin_post_path(post),
                  :method => :patch,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-mini btn-warning' %>
    <% end -%>            
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_post_path(post),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>
